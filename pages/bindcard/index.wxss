page{ background:#FFF5DD; }
.container{  height:100%; overflow-y:scroll; padding:0 60rpx; -webkit-overflow-scrolling:touch; box-sizing:border-box; position:relative;}
.container .card{ background:#fff; padding:15rpx; border-radius:15rpx; margin:100rpx 0; position:relative; display: flex; flex-direction: column }
.container .card image{ width:100%; height:850rpx; }
.container .card .form{ position:absolute; bottom:60rpx; left:0; width:100%; padding:0 60rpx; box-sizing:border-box; }
.container .card .form view.cardNo{ background:#fff;  padding:10rpx 0; border-radius:15rpx; margin-bottom:30rpx }
.container .card .form view.pwd{ background:#fff; padding:10rpx 0; border-radius:15rpx; }
.container .card .form view.cardNo input{ height:60rpx; line-height:60rpx; padding:0 20rpx; text-align:center;}
.container .card .form view.pwd input{ height:60rpx; line-height:60rpx; padding:0 20rpx; text-align:center;}

.bindBtn{ background:#951D3E; color:#fff; text-align:center; border-radius:10rpx; height:80rpx; line-height:80rpx; margin-top:70rpx; font-size:30rpx  }