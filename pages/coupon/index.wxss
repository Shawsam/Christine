page{ background:#FFF5DD; }
.container{  height:100%; overflow-y:scroll; -webkit-overflow-scrolling:touch; box-sizing:border-box; position:relative;}
.container .main{ padding:30rpx 0; }
.container .main .item{ width:668rpx; height:171rpx; margin:40rpx auto; position:relative; }
.container .main .item image{ width:668rpx; height:171rpx; margin:0 auto; position:relative; display: flex; flex-direction:colum}
.container .main .item .val{ position:absolute; left:215rpx; bottom:45rpx; font-size:85rpx; font-weight:bold; color:#e42f61; }
.container .main .item .info{ position:absolute; right:110rpx; top:27rpx; color:#666; }
.container .bottom{ position:absolute; bottom:40rpx; display:block; width:100%; }
.container .bottom image{ width:302rpx; height:140rpx; margin:0 auto; display:block;}
.container .bottom .page{ margin:0 auto; display:block; width:160rpx; }
.container .bottom .page image{ width:40rpx; height:40rpx; display:inline-block; }


.shadow{ position:fixed; width:100%; height:100%; background:rgba(0,0,0,0.5); z-index:1000; }
.Modal{ position:fixed; width:80%; left:10%; top:120rpx; background:#951D3E; z-index:1001; border-radius:15rpx; padding-bottom:25rpx; }
.Modal .Modaltitle{ height:70rpx; line-height:70rpx; color:#fff; text-align:center; font-size:35rpx; }
.Modal .Modalcontent{ background:#fff; border-radius:0 0 15rpx 15rpx; padding:40rpx; text-align:center; }
.Modal .Modalcontent .name{ font-size:30rpx; color:#951D3E; }
.Modal .Modalcontent .time{ font-size:27rpx; color:#999; margin-top:6rpx; }
.Modal .Modalcontent .qrcode{ height:380rpx; width:380rpx; margin:30rpx auto; display:block; }
.Modal .Modalcontent .text{ margin:40rpx 40rpx 0 40rpx; color:#333; text-align:left; }
.Modal .Modalcontent .text .title{ color:#000; font-size:34rpx; margin-bottom:20rpx; text-align:center; }
